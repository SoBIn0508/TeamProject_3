<UserControl x:Class="AMPManager.View.StatisticsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:oxy="http://oxyplot.org/wpf"
             Background="{StaticResource AppBackground}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Style="{StaticResource PanelStyle}" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                <TextBlock Text="기간 조회 :" Foreground="{StaticResource SecondaryText}" VerticalAlignment="Center" Margin="0,0,10,0"/>

                <DatePicker SelectedDate="{Binding StartDate}" Width="120" VerticalContentAlignment="Center"/>
                <TextBlock Text=" ~ " Foreground="White" VerticalAlignment="Center" Margin="5,0"/>
                <DatePicker SelectedDate="{Binding EndDate}" Width="120" VerticalContentAlignment="Center"/>

                <Button Content="조회" Command="{Binding SearchCommand}" Width="80" Height="30" Margin="20,0,0,0"
                        Background="{StaticResource AccentColor}" Foreground="White" FontWeight="Bold" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="4"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Style="{StaticResource PanelStyle}" Margin="0,0,0,10">
            <Grid>
                <TextBlock Text="일별 불량 추이" Style="{StaticResource TitleText}"/>
                <oxy:PlotView Model="{Binding DefectRateModel}" Margin="10,40,10,10" Background="Transparent"/>
            </Grid>
        </Border>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource PanelStyle}" Margin="0,0,5,5" Background="#3F51B5">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="외곽선 불량" Foreground="#B0C4DE" FontSize="14" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding CntShape}" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource PanelStyle}" Margin="5,0,0,5" Background="#2E7D32">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="무게중심 불량" Foreground="#A5D6A7" FontSize="14" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding CntCenter}" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource PanelStyle}" Margin="0,5,5,0" Background="#263238">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="녹 불량" Foreground="#90A4AE" FontSize="14" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding CntRust}" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>

            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource PanelStyle}" Margin="5,5,0,0" Background="#37474F">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <TextBlock Text="총 불량" Foreground="#90A4AE" FontSize="14" HorizontalAlignment="Center"/>
                    <TextBlock Text="{Binding CntTotal}" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,5,0,0"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</UserControl>