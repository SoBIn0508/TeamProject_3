<Window x:Class="AMPManager.View.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="로그인" Height="400" Width="350"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize"
        Background="#1E1E2D" AllowsTransparency="True">

    <Border CornerRadius="20" BorderBrush="#3A3A4A" BorderThickness="1">
        <Grid Margin="30">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="AMP Manager" Foreground="#00C1D4" FontSize="28" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,30"/>

                <TextBlock Text="ID" Foreground="#B0B0B0" Margin="0,0,0,5"/>
                <TextBox Text="{Binding InputId}" Height="40" VerticalContentAlignment="Center" Padding="10,0" 
                         Background="#2F2F3D" Foreground="White" BorderThickness="0" FontSize="14">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <TextBlock Text="P/W" Foreground="#B0B0B0" Margin="0,20,0,5"/>
                <PasswordBox x:Name="PwBox" Height="40" VerticalContentAlignment="Center" Padding="10,0"
                             Background="#2F2F3D" Foreground="White" BorderThickness="0" FontSize="14">
                    <PasswordBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="5"/>
                        </Style>
                    </PasswordBox.Resources>
                </PasswordBox>

                <Button Content="로그인" Command="{Binding LoginCommand}" CommandParameter="{Binding ElementName=PwBox}"
                        Height="45" Margin="0,40,0,0" Background="#00C1D4" Foreground="White" FontWeight="Bold" FontSize="16" BorderThickness="0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="22"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Exit" Click="BtnExit_Click" 
                        Height="30" Width="60" Margin="0,20,0,0" Background="Transparent" Foreground="#505060" BorderThickness="0"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>