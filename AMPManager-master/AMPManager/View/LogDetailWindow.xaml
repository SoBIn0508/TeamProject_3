<Window x:Class="AMPManager.View.LogDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="상세 정보" Height="960" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="#1E1E2D">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/> 
            </Grid.ColumnDefinitions>

            <Grid.Resources>
                <Style TargetType="Border">
                    <Setter Property="Background" Value="#2F2F3D"/>
                    <Setter Property="Margin" Value="2"/>
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Grid.Resources>

            <Border Grid.Row="0" Grid.Column="0">
                <Image Source="{Binding Img1}" Stretch="Uniform"/>
            </Border>
            <Border Grid.Row="0" Grid.Column="1">
                <Image Source="{Binding Img2}" Stretch="Uniform"/>
            </Border>
            <Border Grid.Row="1" Grid.Column="0">
                <TextBlock Text="No Image" Foreground="#505060" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
            <Border Grid.Row="1" Grid.Column="1">
                <TextBlock Text="No Image" Foreground="#505060" HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </Grid>

        <Border Grid.Row="1" Background="#2F2F3D" CornerRadius="10" Padding="20">
            <StackPanel>
                <TextBlock Text="검사 상세 리포트" Foreground="#00C1D4" FontSize="18" FontWeight="Bold" Margin="0,0,0,15"/>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="30"/>
                    </Grid.RowDefinitions>

                    <Grid.Resources>
                        <Style TargetType="TextBlock">
                            <Setter Property="Foreground" Value="#B0B0B0"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                        <Style x:Key="ValueText" TargetType="TextBlock">
                            <Setter Property="Foreground" Value="White"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </Grid.Resources>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="검사 일시"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Timestamp}" Style="{StaticResource ValueText}"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="제품명"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding PropertyName}" Style="{StaticResource ValueText}"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="제품 ID"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding Id}" Style="{StaticResource ValueText}"/>

                    <TextBlock Grid.Row="3" Grid.Column="0" Text="판정 결과"/>
                    <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding Status}" Style="{StaticResource ValueText}" Foreground="{Binding StatusColor}"/>

                    <TextBlock Grid.Row="4" Grid.Column="0" Text="비고 / 사유"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding DefectReason}" Style="{StaticResource ValueText}"/>
                </Grid>
            </StackPanel>
        </Border>

        <Button Grid.Row="2" Content="닫기" IsCancel="True" Height="40" Width="100" Margin="0,20,0,0"
                Background="#4A4A5A" Foreground="White" BorderThickness="0" FontWeight="Bold">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>